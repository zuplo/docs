{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/auth0-jwt-auth-inbound.json",
  "type": "object",
  "title": "Bot Detection",
  "isDeprecated": false,
  "isPaidAddOn": true,
  "isUnlisted": false,
  "description": "Detect known and suspected bots based on sophisticated traffic analysis.\n\n",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "BotDetectionInboundPolicy",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "title": "BotDetectionInboundPolicyOptions",
          "type": "object",
          "description": "The options for this policy",
          "additionalProperties": false,
          "required": ["blockScoresBelow"],
          "properties": {
            "blockScoresBelow": {
              "type": "number",
              "examples": [80],
              "description": "The threshold at which bots are automatically blocked"
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "BotDetectionInboundPolicy",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "blockScoresBelow": 80
          }
        }
      ]
    }
  }
}
