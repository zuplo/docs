{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/auth0-jwt-auth-inbound.json",
  "type": "object",
  "title": "Remove Request Headers",
  "isDeprecated": false,
  "isPaidAddOn": false,
  "isUnlisted": false,
  "description": "Remove headers from the incoming request.\n\n",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "RemoveHeadersInboundPolicy",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "title": "RemoveHeadersInboundPolicyOptions",
          "type": "object",
          "description": "The options for this policy",
          "additionalProperties": false,
          "required": ["headers"],
          "properties": {
            "headers": {
              "type": "array",
              "description": "An array of headers to remove from the incoming request.",
              "examples": [["x-request-id", "content-type"]],
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "RemoveHeadersInboundPolicy",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "headers": ["x-request-id", "content-type"]
          }
        }
      ]
    }
  }
}
