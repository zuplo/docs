{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/set-headers-outbound.json",
  "type": "object",
  "title": "Add or Set Request Headers",
  "isPreview": false,
  "description": "Adds or sets headers on the incoming request",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "SetHeadersInboundPolicy",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "type": "object",
          "description": "The options for this policy",
          "required": [],
          "properties": {
            "headers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "The name of the header"
                  },
                  "value": {
                    "type": "string",
                    "description": "The value of the header"
                  },
                  "overwrite": {
                    "type": "boolean",
                    "description": "Overwrite the value if the header is already present in the request"
                  }
                }
              }
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "SetHeadersInboundPolicy",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "headers": [
              {
                "name": "HEADER_NAME",
                "value": "HEADER_VALUE",
                "overwrite": true
              }
            ]
          }
        }
      ]
    }
  }
}
