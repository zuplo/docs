{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/set-headers-inbound.json",
  "type": "object",
  "title": "Add or Set Response Headers",
  "isPreview": false,
  "description": "",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "SetHeadersOutboundPolicy",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "type": "object",
          "description": "The options for this policy",
          "required": [],
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the header"
            },
            "value": {
              "type": "string",
              "description": "The value of the header"
            },
            "overwrite": {
              "type": "boolean",
              "description": "Should the policy overwrite incoming headers"
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "SetHeadersOutboundPolicy",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "headers": [
              {
                "name": "HEADER_NAME",
                "value": "HEADER_VALUE",
                "overwrite": true
              }
            ]
          }
        }
      ]
    }
  }
}
