{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/redirect-inbound.json",
  "type": "object",
  "title": "Redirect Inbound",
  "isPreview": true,
  "description": "",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "RedirectInbound",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "type": "object",
          "description": "The options for this policy",
          "required": [],
          "properties": {
            "location": {
              "type": "string",
              "description": "The url to redirect."
            },
            "status": {
              "type": "integer",
              "enum": [301, 302, 307, 308],
              "description": "The http status code for the redirect."
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "RedirectInbound",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "location": "https://example.com",
            "status": 301
          }
        }
      ]
    }
  }
}
