{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/auth0-jwt-auth-inbound.json",
  "type": "object",
  "title": "Add or Set Query Parameters",
  "isDeprecated": false,
  "isPaidAddOn": false,
  "isUnlisted": false,
  "description": "Adds or sets query parameters on the incoming request.\n\n",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "SetQueryParamsInboundPolicy",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "title": "SetQueryParamsInboundPolicyOptions",
          "type": "object",
          "description": "The options for this policy",
          "additionalProperties": false,
          "required": ["params"],
          "properties": {
            "params": {
              "type": "array",
              "description": "An array of query params to set in the request. By default, query parameters will be overwritten if they already exist in the request, specify the overwrite property to change this behavior.",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "value"],
                "properties": {
                  "name": {
                    "type": "string",
                    "examples": ["my-key"],
                    "description": "The name of the param"
                  },
                  "value": {
                    "type": "string",
                    "examples": ["my-value"],
                    "description": "The value of the param"
                  },
                  "overwrite": {
                    "type": "boolean",
                    "x-show-example": false,
                    "default": true,
                    "description": "Overwrite the value if the param is already present in the request."
                  }
                }
              }
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "SetQueryParamsInboundPolicy",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "params": [
              [
                {
                  "name": "my-key",
                  "value": "my-value"
                }
              ]
            ]
          }
        }
      ]
    }
  }
}
