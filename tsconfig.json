{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "useDefineForClassFields": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.{ts,tsx}",
    "sidebar.ts",
    "sidebar.guides.ts",
    "zudoku.config.tsx",
    "src/zudoku-env.d.ts",
    "sidebar.ts",
    "sidebar.guides.ts",
    "zudoku.config.tsx"
  ],
  "exclude": ["node_modules", "policies", "temp", "dist", "dist2", "scripts"]
}
