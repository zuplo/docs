{
  "name": "zuplo-docs",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run ci:pre && next dev",
    "build": "npm run ci:pre && next build",
    "postinstall": "npm run get-policies && npm run ci:shiki",
    "get-policies": "sh ./scripts/get-policies.sh",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "ci:pre": "npm run ci:bundles && npm run ci:policies",
    "ci:bundles": "node ./scripts/update-bundles.mjs",
    "ci:shiki": "node ./scripts/copy-shiki.mjs",
    "ci:policies": "node ./scripts/build.mjs && node --enable-source-maps ./scripts/update-policies.main.mjs"
  },
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "@algolia/autocomplete-core": "^1.9.2",
    "@apidevtools/json-schema-ref-parser": "^10.1.0",
    "@headlessui/react": "^1.7.13",
    "@markdoc/markdoc": "^0.3.2",
    "@sindresorhus/slugify": "^2.1.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/typography": "^0.5.7",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@types/react-highlight-words": "^0.16.4",
    "autoprefixer": "^10.4.12",
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.3.2",
    "esbuild": "^0.19.10",
    "flexsearch": "^0.7.31",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "hast-util-select": "^6.0.1",
    "hast-util-to-string": "^3.0.0",
    "hastscript": "^8.0.0",
    "json-schema": "^0.4.0",
    "jsonc-parser": "^3.2.0",
    "lucide-react": "^0.299.0",
    "mdast-util-to-string": "^4.0.0",
    "mermaid": "^10.5.0",
    "nanoid": "^5.0.4",
    "next": "^13.5.4",
    "next-mdx-remote": "^4.4.1",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.2.1",
    "posthog-js": "^1.96.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-highlight-words": "^0.20.0",
    "rehype-autolink-headings": "^7.0.0",
    "rehype-pretty-code": "^0.10.1",
    "rehype-rewrite": "^3.0.6",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^9.0.3",
    "remark-directive": "^2.0.1",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.32.6",
    "simple-functional-loader": "^1.2.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "unified": "^10.1.2",
    "unist-util-visit": "^5.0.0",
    "video.js": "^8.3.0"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@playwright/test": "^1.40.1",
    "@types/node": "^18.18.4",
    "checkly": "^4.5.2",
    "eslint": "^8.51.0",
    "eslint-config-next": "^13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.2",
    "shiki": "^0.14.5"
  }
}
