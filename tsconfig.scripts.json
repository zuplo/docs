{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": ["scripts/**/*.ts", "scripts/**/*.mts", "scripts/**/*.js"],
  "exclude": ["node_modules", "dist", "dist2", "temp"]
}
